<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Table Row 1 -->
    <TableRow
        android:layout_marginTop="15dp">

               <TextView
            android:layout_marginLeft="15dp"
            android:text="Address : "
            android:width="120dp"
            android:textColor="#180000"
            android:textSize="16dp"/>


        <TextView
            android:id="@+id/address"
            android:layout_marginLeft="15dp"
            android:text="Address Here"
            android:width="120dp"
            android:textColor="#180000"
            android:textSize="16dp"/>
    </TableRow>

    <TableRow
        android:layout_marginTop="15dp">

        <TextView
            android:layout_marginLeft="15dp"
            android:text="City : "
            android:width="120dp"
            android:textColor="#180000"
            android:textSize="16dp"/>


        <TextView
            android:id="@+id/city"
            android:layout_marginLeft="15dp"
            android:text="city Here"
            android:width="120dp"
            android:textColor="#180000"
            android:textSize="16dp"/>
    </TableRow>

    <TableRow
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/state"
            android:layout_marginLeft="15dp"
            android:text="State : "
            android:width="120dp"
            android:textColor="#180000"
            android:textSize="16dp"/>


        <TextView
            android:layout_marginLeft="15dp"
            android:text="State Here"
            android:width="120dp"
            android:textColor="#180000"
            android:textSize="16dp"/>
    </TableRow>
    <TableRow
        android:layout_marginTop="15dp">

        <TextView
            android:layout_marginLeft="15dp"
            android:text="Country : "
            android:width="120dp"
            android:textColor="#180000"
            android:textSize="16dp"/>


        <TextView
            android:layout_marginLeft="15dp"
            android:text="India"
            android:width="120dp"
            android:textColor="#180000"
            android:textSize="16dp"/>
    </TableRow>
    </TableLayout>